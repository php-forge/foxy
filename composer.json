{
    "name": "php-forge/foxy",
    "description": "Fast, reliable, and secure NPM/Yarn/pnpm bridge for Composer",
    "keywords": ["npm", "yarn", "composer", "bridge", "dependency manager", "package", "asset", "nodejs"],
    "homepage": "https://github.com/fxpio/foxy",
    "type": "composer-plugin",
    "license": "MIT",
    "authors": [
        {
            "name": "Fran√ßois Pluchino",
            "email": "francois.pluchino@gmail.com"
        }
    ],
    "require": {
        "ext-ctype": "*",
        "ext-mbstring": "*",
        "php": "^8.1",
        "composer/composer": "^2.0.0",
        "composer-plugin-api": "^2.0",
        "composer/semver": "^3.4",
        "symfony/console": "^6.0|^7.0"
    },
    "require-dev": {
        "maglnet/composer-require-checker": "^4.7",
        "php-forge/support": "^0.1",
        "phpunit/phpunit": "^10.5",
        "symplify/easy-coding-standard": "^12.1",
        "vimeo/psalm": "^5.20"
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Foxy\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Foxy\\Tests\\": "tests"
        }
    },
    "extra": {
        "class": "Foxy\\Foxy",
        "branch-alias": {
            "dev-main": "1.2-dev"
        }
    },
    "scripts": {
        "check-dependencies": "composer-require-checker",
        "easy-coding-standard": "ecs check",
        "psalm": "psalm",
        "test": "phpunit"
    }
}
